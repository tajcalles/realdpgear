<h1 class="center">Edit item</h1>
<hr>
<div class="container white black-text">
  <%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :item_image %>
    <%= f.text_area :item_image %>
    <br>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <div class="center blue-text">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<%= button_to 'Back', items_path, method: :get, class: "btn waves-effect waves-light grey darken-3" %>
