<!DOCTYPE html>
<html>
  <head>
    <title>Realdpgear</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header class="center" id="site-header">
    <% if user_signed_in? %>
      <div class="navbar fixed">
        <nav>
          <div class="nav-wrapper">
            <a href="#" class="left logo">DPGear</a>
            <ul class="right">
              <li>
                <%= link_to 'All Items', root_path, method: :get, class: 'waves-effect waves-light' %>
              </li>
              <li>
                <%= link_to 'Cart', carts_path, method: :get, class: 'waves-effect waves-light' %>
              </li>
              <li>
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'waves-effect waves-light' %>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    <% end %>
  </header>
  <hr />
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>