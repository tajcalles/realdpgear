<!DOCTYPE html>
<html>
  <head>
    <title>Realdpgear</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header class="center" id="site-header">
    <% if user_signed_in? %>
      <div class="navbar fixed">
        <nav>
          <div class="nav-wrapper">
            <a href="<%= root_path %>"><img class="left logo" src="/assets/Logo.png"></a>
            <ul class="right">
              <li>
                <%= link_to 'All Items', root_path, method: :get, class: 'waves-effect waves-light' %>
              </li>
              <li>
                <%= link_to 'Cart', carts_path, method: :get, class: 'waves-effect waves-light' %>
              </li>
              <li>
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'waves-effect waves-light' %>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    <% else%>
      <div class="nav-wrapper">
        <nav>
          <div class="nav-wrapper">
            <a href="<%= root_path %>"><img class="left logo" src="/assets/Logo.png"></a>
          </div>
        </nav>
      </div>
    <% end %>
  </header>
    <div class="container">
      <%= yield %>
    </div>
    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">DPGear</h5>
            <p class="grey-text text-lighten-4">An Amazing Project by Jace, Dan, Pete, &amp; Taj</p>
          </div>
          <div class="col l4 offset-l2 s12">
            <h5 class="white-text">Links</h5>
            <ul>
              <% if user_signed_in? %>
                <li>
                  <%= link_to 'Cart', carts_path, method: :get %>
                </li>
                <li>
                  <%= link_to 'Edit Your Account', edit_user_registration_path, method: :get %>
                </li>
              <% else %>
                <li><%= link_to "Create an Account", new_registration_path(resource_name) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
          Â© 2017 Copyright DPGear
        </div>
      </div>
    </footer>
  </body>
</html>