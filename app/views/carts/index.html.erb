<h1 class="center">Your Carts</h1>
<h5><%= button_to 'Home', root_path, method: :get, class: "btn waves-effect waves-light grey darken-3" %></h5>
<hr>
<div class="row">
  <% @carts.each do |cart| %>
    <div class="col s6">
      <div class="card grey darken-3">
        <div class="card-content">
          <span class="card-title center"><%= link_to cart.name, cart_path(cart) %></span>
          <div class="card-action center">
              <%= link_to 'View', cart_path(cart) %>
              <%= link_to 'Edit', edit_cart_path(cart) %>
              <%= link_to 'Delete', cart, method: :delete %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<hr>
<div class="container cont_border">
  <h4 class="center blue-text"><%= button_to 'Add Cart', new_cart_path, method: :get, class: "btn waves-effect waves-light grey darken-3" %></h4>
  <p class="center">I mean, if you wanna buy stuff</p>
</div>
<hr>
